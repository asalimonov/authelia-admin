{
  "name": "svelte-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite dev --host --port 9093",
    "build": "vite build",
    "preview": "HOST=0.0.0.0 PORT=9093 node build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:functional": "vitest run --config vitest.functional.config.ts",
    "lint": "eslint 'src/**/*.{ts,svelte}'",
    "test:e2e": "playwright test --config=e2e/playwright.config.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@sveltejs/adapter-node": "^5.5.2",
    "@sveltejs/kit": "^2.50.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/vite": "^4.1.12",
    "@tsconfig/svelte": "^5.0.4",
    "@types/ldapjs": "^3.0.6",
    "@types/pg": "^8.16.0",
    "eslint": "^9.39.2",
    "eslint-plugin-svelte": "2.46.1",
    "globals": "^16.2.0",
    "serve": "^14.2.5",
    "svelte": "^5.50.0",
    "svelte-check": "^4.3.6",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.49.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@apollo/client": "^3.13.8",
    "@inlang/paraglide-js": "^2.7.0",
    "cross-fetch": "^4.1.0",
    "encoding": "^0.1.13",
    "graphql": "^16.11.0",
    "ldapts": "^8.0.23",
    "pg": "^8.18.0",
    "sqlite3": "^5.1.7",
    "yaml": "^2.8.1"
  }
}
